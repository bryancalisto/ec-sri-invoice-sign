{
  "compilerOptions": {
    "target": "ES2015",
    "rootDir": "src",
    "outDir": "build",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleDetection": "force"
  }
}